<section class="empty-state" role="status">
    <h2>@Title</h2>
    @if (!string.IsNullOrWhiteSpace(Message))
    {
        <p>@Message</p>
    }
</section>

@code {
    [Parameter, EditorRequired] public string Title { get; set; } = string.Empty;
    [Parameter] public string? Message { get; set; }
}
